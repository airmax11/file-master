<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            opacity: 0
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
        Button:
            text: 'Start Camera' if root.ids.camera.play == False else 'Stop Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
            background_normal : "images/normal.png"
            background_down : "images/down.png"
        Button:
            text: 'Capture'
            on_press: root.capture()
            size_hint_y: 0.1
            background_normal : "images/normal.png"
            background_down : "images/down.png"

<ImageScreen>:
    GridLayout:
        padding: 10
        spacing: 10
        cols: 1
        Image:
            size_hint_y: 0.7
            id: img
        Button:
            text: 'Create Sharable Link'
            size_hint_y: 0.1
            on_press: root.create_link()
            background_normal : "images/normal.png"
            background_down : "images/down.png"
        Label:
            id: link_text
            text: ''
            size_hint_y: 0.1
        GridLayout:
            cols: 3
            size_hint_y: 0.1
            Button:
                text: 'Copy Link'
                on_press: root.clipboard_copy()
                background_normal : "images/normal.png"
                background_down : "images/down.png"
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_normal : "images/normal.png"
                background_down : "images/down.png"
            Button:
                text: 'Return to Capture Window'
                background_normal : "images/normal.png"
                background_down : "images/down.png"
                on_press: root.return_to_widget()

<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.3, 0.2, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: first_screen
        name: 'first_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'
